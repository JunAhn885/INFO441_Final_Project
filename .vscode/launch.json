{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [ "start" ],
            "env": { "DEBUG": "express:* express-starter:server" },
            "console": "integratedTerminal"
        }
    ]
}